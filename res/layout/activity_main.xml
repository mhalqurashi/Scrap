<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:duplicateParentState="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.scrap.MainActivity" >

    <ImageView
        android:id="@+id/whiteImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/white_house"
        android:src="@drawable/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/whiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/white_house"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/empireImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empire"
            android:src="@drawable/empire" />

        <ImageView
            android:id="@+id/eiffelImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:contentDescription="@string/eiffel"
            android:src="@drawable/eiffel" />

        <ImageView
            android:id="@+id/freedomImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/freedom"
            android:src="@drawable/freedome" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="left|center_horizontal" >

        <TextView
            android:id="@+id/empireText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:contentDescription="@string/empire"
            android:text="@string/empire"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/eiffelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/eiffel"
            android:text="@string/eiffel"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/freedomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:contentDescription="@string/freedom"
            android:text="@string/freedom"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="12dp" />

    </FrameLayout>

</LinearLayout>